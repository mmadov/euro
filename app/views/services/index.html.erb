<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Name az</th>
      <th>Name en</th>
      <th>Name ru</th>
      <th>Desc az</th>
      <th>Desc ru</th>
      <th>Desc en</th>
      <th>About az</th>
      <th>About ru</th>
      <th>About en</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name_az %></td>
        <td><%= service.name_en %></td>
        <td><%= service.name_ru %></td>
        <td><%= service.desc_az %></td>
        <td><%= service.desc_ru %></td>
        <td><%= service.desc_en %></td>
        <td><%= service.about_az %></td>
        <td><%= service.about_ru %></td>
        <td><%= service.about_en %></td>
        <td><%= service.img %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

